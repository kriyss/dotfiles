[bar/default]
inherit = bar/parent
top = true
line-size = 3

padding-left = 0

modules-left = i3
modules-center = xwindow
modules-right = gmail date powermenu


[bar/bottom]
inherit = bar/parent
bottom = true

padding-left = 3

modules-left = volume backlight
modules-right = cpu filesystem memory battery wireless-network

[module/gmail]
type = custom/script
exec = ~/.config/polybar/gmail/launch.py
tail = true
click-left = xdg-open https://mail.google.com


